<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                name="customer-account-navigation-opinion-link" ifconfig="opinion/general/enable_product_opinion">
                <arguments>
                    <argument name="label" xsi:type="string">My Opinions</argument>
                    <argument name="path" xsi:type="string">opinion/index/myopinions</argument>
                    <argument name="sortOrder" xsi:type="number">190</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>