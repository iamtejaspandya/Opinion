                                    <a href="<?= $escaper->escapeUrl($product->getProductUrl()) ?>">
                                        <img src="<?= $escaper->escapeUrl($productImage) ?>"
                                            alt="<?= $escaper->escapeHtml($product->getName()) ?>"
                                            width="75"
                                            height="75"
                                            loading="lazy"
                                            class="opinion-product-image" />
                                    </a>
